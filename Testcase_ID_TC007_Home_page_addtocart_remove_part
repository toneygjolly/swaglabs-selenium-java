//Testcase ID :TC006
//when a user clicks the 'ADD TO CART' button, the corresponding item's data is added to the cart page. Confirm that the cart notification count increases when 'ADD TO CART' is clicked and decreases
//when the 'REMOVE' button is clicked


package swaglabs_selenium_java;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.edge.EdgeDriver;

public class Testcase_ID_TC007_Home_page_addtocart_remove_part {
	public static void main (String [] args) throws InterruptedException {
	System.setProperty("webdriver.edge.driver", "E:\\NEW LAPTOP\\selenium_java\\Libraray\\edgedriver_win64\\msedgedriver.exe");
        WebDriver driver = new EdgeDriver();
        driver.manage().window().maximize();
        driver.get("https://www.saucedemo.com/v1/");
		Thread.sleep(4000);
//Login page
     String title =driver.getTitle();
     System.out.println("The title of page:"+title);
     WebElement username =driver.findElement(By.id("user-name"));
     username.sendKeys("standard_user");
     WebElement password =driver.findElement(By.id("password"));
     password.sendKeys("secret_sauce");
	    WebElement login_button =driver.findElement(By.id("login-button"));
	    login_button.click();
//Home page
	     System.out.println("The title of page:"+title);
	     Thread.sleep(4000);
	     WebElement addtocart1 =driver.findElement(By.className("btn_inventory"));
		 addtocart1.click();
		 Thread.sleep(2000);
//cart page
	     WebElement cartpage =driver.findElement(By.className("fa-3x"));
	     cartpage.click();
	     Thread.sleep(2000);
	     WebElement removefromcart =driver.findElement(By.className("cart_button"));
	     removefromcart.click();
	    
     
	}
}
